<% @title = "新規登録" %>
<h1><%= @title %></h1>

<div id="generic-form">

  <%= form_tag signup_path, :method => :post do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>

    <div class="field">
      <%= label_tag :name %><br />
      <%= text_field_tag :name %>
    </div>

    <div class="field">
      <%= label_tag :address %><br />
      <%= text_field_tag :address %>
    </div>


    <div class="actions">
      <%= submit_tag "登録" %>
    </div>
  <% end %>
</div>